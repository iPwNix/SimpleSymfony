{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
        .new-button{
            margin-bottom: 25px;
        }
    </style>
    <div class="example-wrapper">
        <h1>Categories</h1>
        <a href="/categories/new" class="btn btn-success new-button">New Category</a>
        {% if categories %}
            <table id="articles" class="table table-striped">
                <thead>
                <tr>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.category }}</td>
                        <td>
                            <a href="/categories/edit/{{ category.id }}" class="btn btn-warning">Edit</a>
                            <a href="#" class="btn btn-danger delete-category" data-id="{{ category.id }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No categories found</p>
        {% endif %}
    </div>
{% endblock %}
